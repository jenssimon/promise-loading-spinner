{
  "name": "promise-loading-spinner",
  "version": "2.2.2",
  "description": "Advanced handling of loaders/spinners based on one or multiple Promises",
  "repository": {
    "type": "git",
    "url": "https://github.com/jenssimon/promise-loading-spinner"
  },
  "keywords": [
    "loader",
    "spinner",
    "promise",
    "loading-indicator",
    "loading-spinner",
    "loading-animation",
    "vanilla-js",
    "await-async"
  ],
  "author": "Jens Simon <https://github.com/jenssimon>",
  "license": "MIT",
  "private": false,
  "main": "dist/promise-loading-spinner.cjs.js",
  "module": "dist/promise-loading-spinner.esm.js",
  "browser": "dist/promise-loading-spinner.umd.js",
  "types": "./dist/loader.d.ts",
  "scripts": {
    "lint": "eslint --fix --ext .tsx,.ts,.jsx,.js ./ && tsc",
    "build": "rollup -c",
    "prepublishOnly": "yarn build",
    "test": "jest --coverage",
    "coveralls": "cat ./coverage/lcov.info | coveralls"
  },
  "devDependencies": {
    "@jenssimon/eslint-config-base": "^5.0.0",
    "@jenssimon/eslint-config-typescript": "^3.1.3",
    "@rollup/plugin-commonjs": "^19.0.0",
    "@rollup/plugin-typescript": "^8.3.0",
    "@types/jest": "^27.0.3",
    "coveralls": "^3.1.1",
    "eslint": "^8.2.0",
    "jest": "^27.3.1",
    "rollup": "^2.60.0",
    "ts-jest": "^27.0.7",
    "tslib": "^2.3.1",
    "typescript": "^4.5.2"
  },
  "files": [
    "dist"
  ],
  "eslintConfig": {
    "parserOptions": {
      "project": "tsconfig.json"
    },
    "extends": [
      "@jenssimon/base",
      "@jenssimon/typescript"
    ]
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "modulePathIgnorePatterns": [
      "dist/"
    ],
    "moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json", "node"]
  }
}
