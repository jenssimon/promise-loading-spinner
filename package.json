{
  "name": "promise-loading-spinner",
  "version": "3.0.0",
  "description": "Advanced handling of loaders/spinners based on one or multiple Promises",
  "repository": {
    "type": "git",
    "url": "https://github.com/jenssimon/promise-loading-spinner"
  },
  "keywords": [
    "loader",
    "spinner",
    "promise",
    "loading-indicator",
    "loading-spinner",
    "loading-animation",
    "vanilla-js",
    "await-async"
  ],
  "author": "Jens Simon <https://github.com/jenssimon>",
  "license": "MIT",
  "private": false,
  "main": "dist/loader.js",
  "types": "dist/loader.d.ts",
  "type": "module",
  "scripts": {
    "lint": "eslint --fix --ext .tsx,.ts,.jsx,.js ./ && tsc --noEmit",
    "build": "tsc",
    "predemo": "run-s build",
    "demo": "web-dev-server --open /demo/demo.html",
    "prepublishOnly": "yarn build",
    "test": "jest --coverage",
    "coveralls": "cat ./coverage/lcov.info | coveralls"
  },
  "devDependencies": {
    "@jenssimon/eslint-config-base": "5.3.0",
    "@jenssimon/eslint-config-typescript": "3.1.3",
    "@types/jest": "27.0.3",
    "@web/dev-server": "0.1.28",
    "coveralls": "3.1.1",
    "eslint": "8.3.0",
    "jest": "27.5.1",
    "npm-run-all": "4.1.5",
    "ts-jest": "27.0.7",
    "typescript": "4.5.5"
  },
  "files": [
    "dist/loader.js",
    "dist/loader.d.ts"
  ],
  "eslintConfig": {
    "parserOptions": {
      "project": "tsconfig.json"
    },
    "extends": [
      "@jenssimon/base/frontend-react",
      "@jenssimon/typescript"
    ]
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "modulePathIgnorePatterns": [
      "dist/"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
