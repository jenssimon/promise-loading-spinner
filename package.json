{
  "name": "promise-loading-spinner",
  "version": "3.0.0",
  "description": "Advanced handling of loaders/spinners based on one or multiple Promises",
  "repository": {
    "type": "git",
    "url": "https://github.com/jenssimon/promise-loading-spinner"
  },
  "keywords": [
    "loader",
    "spinner",
    "promises",
    "loading-indicator",
    "loading-spinner",
    "loading-animation",
    "vanilla-js",
    "await-async",
    "vanilla-javascript",
    "vanillajs"
  ],
  "author": "Jens Simon <https://github.com/jenssimon>",
  "license": "MIT",
  "main": "dist/loader.js",
  "types": "dist/loader.d.ts",
  "type": "module",
  "scripts": {
    "lint": "eslint --fix --ext .tsx,.ts,.cts,.mts,.jsx,.js,.cjs,.mts ./ && tsc --noEmit",
    "build": "tsc",
    "predemo": "run-s build",
    "demo": "web-dev-server --open /demo/demo.html",
    "prepublishOnly": "yarn build",
    "test": "jest --coverage",
    "ci-test": "run-s \"ci-test:*\"",
    "ci-test:lint": "eslint ./",
    "ci-test:tsc": "tsc --noEmit",
    "ci-test:test": "jest --coverage",
    "commit": "cz",
    "postinstall": "husky install",
    "prepack": "pinst --disable",
    "postpack": "pinst --enable",
    "semantic-release": "semantic-release"
  },
  "devDependencies": {
    "@commitlint/cli": "17.7.1",
    "@commitlint/config-conventional": "17.7.0",
    "@jenssimon/eslint-config-base": "7.2.0",
    "@jenssimon/eslint-config-typescript": "5.1.6",
    "@types/jest": "29.5.4",
    "@types/node": "18.17.15",
    "@web/dev-server": "0.3.1",
    "commitizen": "4.3.0",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "8.49.0",
    "husky": "8.0.3",
    "jest": "29.6.4",
    "jest-environment-jsdom": "29.6.4",
    "lint-staged": "14.0.1",
    "npm-run-all": "4.1.5",
    "pinst": "3.0.0",
    "semantic-release": "21.1.1",
    "ts-jest": "29.1.1",
    "ts-node": "10.9.1",
    "typescript": "5.2.2"
  },
  "files": [
    "dist/loader.js",
    "dist/loader.d.ts"
  ],
  "eslintConfig": {
    "parserOptions": {
      "project": "tsconfig.json"
    },
    "extends": [
      "@jenssimon/base/frontend-react",
      "@jenssimon/typescript"
    ],
    "overrides": [
      {
        "files": [
          "*.cjs"
        ],
        "rules": {
          "import/no-commonjs": "off"
        }
      }
    ]
  },
  "jest": {
    "preset": "ts-jest/presets/default-esm",
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "transform": {
      "^.+\\.[tj]sx?": [
        "ts-jest",
        {
          "useESM": true
        }
      ]
    },
    "modulePathIgnorePatterns": [
      "dist/"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "extensionsToTreatAsEsm": [".ts"]
  },
  "packageManager": "yarn@3.6.3",
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "**/*.{js,ts}": "eslint"
  },
  "release": {
    "branches": [
      "main"
    ]
  }
}
