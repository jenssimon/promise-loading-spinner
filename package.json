{
  "name": "promise-loading-spinner",
  "version": "3.0.0",
  "description": "Advanced handling of loaders/spinners based on one or multiple Promises",
  "repository": {
    "type": "git",
    "url": "https://github.com/jenssimon/promise-loading-spinner"
  },
  "keywords": [
    "loader",
    "spinner",
    "promise",
    "loading-indicator",
    "loading-spinner",
    "loading-animation",
    "vanilla-js",
    "await-async"
  ],
  "author": "Jens Simon <https://github.com/jenssimon>",
  "license": "MIT",
  "main": "dist/loader.js",
  "types": "dist/loader.d.ts",
  "type": "module",
  "scripts": {
    "lint": "eslint --fix --ext .tsx,.ts,.jsx,.js ./ && tsc --noEmit",
    "build": "tsc",
    "predemo": "run-s build",
    "demo": "web-dev-server --open /demo/demo.html",
    "prepublishOnly": "yarn build",
    "test": "jest --coverage",
    "ci": "run-s \"ci:*\"",
    "ci:lint": "eslint ./",
    "ci:tsc": "tsc --noEmit",
    "ci:test": "jest --coverage"
  },
  "devDependencies": {
    "@jenssimon/eslint-config-base": "5.4.0",
    "@jenssimon/eslint-config-typescript": "3.4.2",
    "@types/jest": "27.5.1",
    "@web/dev-server": "0.1.31",
    "eslint": "8.15.0",
    "jest": "28.1.0",
    "jest-environment-jsdom": "28.1.0",
    "npm-run-all": "4.1.5",
    "ts-jest": "28.0.2",
    "typescript": "4.6.4"
  },
  "files": [
    "dist/loader.js",
    "dist/loader.d.ts"
  ],
  "eslintConfig": {
    "parserOptions": {
      "project": "tsconfig.json"
    },
    "extends": [
      "@jenssimon/base/frontend-react",
      "@jenssimon/typescript"
    ]
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "modulePathIgnorePatterns": [
      "dist/"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "packageManager": "yarn@3.2.1"
}
