{
  "name": "promise-loading-spinner",
  "version": "3.0.0",
  "description": "Advanced handling of loaders/spinners based on one or multiple Promises",
  "repository": {
    "type": "git",
    "url": "https://github.com/jenssimon/promise-loading-spinner"
  },
  "keywords": [
    "loader",
    "spinner",
    "promises",
    "loading-indicator",
    "loading-spinner",
    "loading-animation",
    "vanilla-js",
    "await-async",
    "vanilla-javascript",
    "vanillajs"
  ],
  "author": "Jens Simon <https://github.com/jenssimon>",
  "license": "MIT",
  "main": "dist/src/loader.js",
  "types": "dist/src/loader.d.ts",
  "type": "module",
  "scripts": {
    "lint": "run-p 'lint:*'",
    "lint:js": "eslint .",
    "lint:css": "stylelint '**/*.css'",
    "build": "tsc",
    "predemo": "run-s build",
    "demo": "vite demo/ --open",
    "prepublishOnly": "yarn build",
    "test": "vitest",
    "commit": "cz",
    "prepack": "pinst --disable",
    "postpack": "pinst --enable",
    "semantic-release": "semantic-release"
  },
  "devDependencies": {
    "@commitlint/cli": "20.1.0",
    "@commitlint/config-conventional": "20.0.0",
    "@jenssimon/eslint-config-base": "9.0.8",
    "@preact/signals-core": "^1.6.0",
    "@types/node": "24.10.0",
    "@vitest/coverage-v8": "^4.0.0",
    "@vitest/eslint-plugin": "^1.1.14",
    "commitizen": "4.3.1",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "9.39.0",
    "globals": "^16.0.0",
    "husky": "9.1.7",
    "jsdom": "^27.0.0",
    "lint-staged": "16.2.6",
    "npm-run-all2": "^8.0.0",
    "pinst": "3.0.0",
    "semantic-release": "25.0.1",
    "stylelint": "^16.18.0",
    "stylelint-config-recess-order": "^7.0.0",
    "stylelint-config-standard": "^39.0.0",
    "stylelint-order": "^7.0.0",
    "typescript": "5.9.3",
    "typescript-eslint": "^8.24.1",
    "vite": "^7.0.0",
    "vitest": "^4.0.0"
  },
  "files": [
    "dist/src/loader.js",
    "dist/src/loader.d.ts"
  ],
  "packageManager": "yarn@4.10.3",
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "release": {
    "branches": [
      "main"
    ]
  }
}
