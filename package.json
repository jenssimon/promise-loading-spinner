{
  "name": "promise-loading-spinner",
  "version": "3.0.0",
  "description": "Advanced handling of loaders/spinners based on one or multiple Promises",
  "repository": {
    "type": "git",
    "url": "https://github.com/jenssimon/promise-loading-spinner"
  },
  "keywords": [
    "loader",
    "spinner",
    "promise",
    "loading-indicator",
    "loading-spinner",
    "loading-animation",
    "vanilla-js",
    "await-async"
  ],
  "author": "Jens Simon <https://github.com/jenssimon>",
  "license": "MIT",
  "main": "dist/loader.js",
  "types": "dist/loader.d.ts",
  "type": "module",
  "scripts": {
    "lint": "eslint --fix --ext .tsx,.ts,.jsx,.js ./ && tsc --noEmit",
    "build": "tsc",
    "predemo": "run-s build",
    "demo": "web-dev-server --open /demo/demo.html",
    "prepublishOnly": "yarn build",
    "test": "jest --coverage",
    "ci-test": "run-s \"ci-test:*\"",
    "ci-test:lint": "eslint ./",
    "ci-test:tsc": "tsc --noEmit",
    "ci-test:test": "jest --coverage",
    "commit": "cz",
    "postinstall": "husky install",
    "prepack": "pinst --disable",
    "postpack": "pinst --enable",
    "semantic-release": "semantic-release"
  },
  "devDependencies": {
    "@commitlint/cli": "17.1.2",
    "@commitlint/config-conventional": "17.1.0",
    "@jenssimon/eslint-config-base": "6.3.4",
    "@jenssimon/eslint-config-typescript": "3.6.4",
    "@types/jest": "29.1.1",
    "@types/node": "18.7.23",
    "@web/dev-server": "0.1.34",
    "commitizen": "4.2.5",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "8.24.0",
    "husky": "8.0.1",
    "jest": "29.1.2",
    "jest-environment-jsdom": "29.1.2",
    "lint-staged": "13.0.3",
    "npm-run-all": "4.1.5",
    "pinst": "3.0.0",
    "semantic-release": "19.0.5",
    "ts-jest": "29.0.3",
    "ts-node": "10.9.1",
    "typescript": "4.8.4"
  },
  "files": [
    "dist/loader.js",
    "dist/loader.d.ts"
  ],
  "eslintConfig": {
    "parserOptions": {
      "project": "tsconfig.json"
    },
    "extends": [
      "@jenssimon/base/frontend-react",
      "@jenssimon/typescript"
    ]
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "modulePathIgnorePatterns": [
      "dist/"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "packageManager": "yarn@3.2.3",
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "**/*.{js,ts}": "eslint"
  }
}
