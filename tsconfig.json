{
  "compilerOptions": {
    "target": "ES2019",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "outDir": "./dist/"
  },
  "include": [
    "src/**/*",
    "commitlint.config.js",
    "stylelint.config.js",
    "vitest.config.ts"
  ],
  "exclude": [
    "node_modules/**",
    "dist"
  ]
}
